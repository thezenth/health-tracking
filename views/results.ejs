<html>

  <head>
    <title><%= title %></title>
    <% include ./partials/head.ejs %>

    <script>
      function addItemToMeal(item) {
        // add to cookie
        document.cookie.passToMeal = [];
        document.cookie.passToMeal.push(item);

        // redirect
        window.location = "http://arogya.mybluemix.net/meal"
      }
    </script>
  </head>

  <body>
    <!-- <p><%= foodItems %></p> -->
    <% for(var i = 0; i<foodItems.length; i++) {%>
      <input type="radio" name="selectedFood" value="<%= foodItems[i].ndbno %>"> <%= foodItems[i].name %> <br>
    <% } %>
  </body>

</html>
